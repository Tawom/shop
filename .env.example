# Docker Environment Variables
# Copy this file to .env and update with your values

# JWT Secret (generate a strong random string)
JWT_SECRET=your-secret-key-change-in-production-please-use-strong-random-string

# Email Configuration (for production)
NODE_ENV=development
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@e-shop.com

# MongoDB Credentials (change in production)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123

# Optional: External MongoDB URI (if not using docker mongodb)
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/dbname

# Frontend URL
FRONTEND_URL=http://localhost:5173
